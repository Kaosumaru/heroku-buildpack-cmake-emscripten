#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing cmake"

### Configure directories
BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

#if [ -n "$CACHE_DIR/cmake" ]; then
	# download
	curl https://cmake.org/files/v3.6/cmake-3.6.1.tar.gz -s -O

	# make dir
	mkdir -p $CACHE_DIR/cmake

	# untar the binary to the directory we want
	tar -C $CACHE_DIR/cmake -xvf cmake-3.6.1.tar.gz

	cd $CACHE_DIR/cmake
	./bootstrap
	make
	make install	
#fi

debug=`ls $CACHE_DIR/cmake`
echo $debug

echo $PATH
